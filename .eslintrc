{
    "env": {
        "node": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2020,
        "ecmaFeatures": {
            "modules": true
        }
    },
    "rules": {
        "no-undef": 2,
        "no-var": 2,
        "no-const-assign": 2,
        "no-unused-vars": 2,
        "prefer-const": 2,
        "no-case-declarations": "off"
        // "no-console": [2, { "allow": ["warn", "error"] }]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx", ".json"]
            }
        }
    }
}
